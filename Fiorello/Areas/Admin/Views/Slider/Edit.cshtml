@model Slider

<div class="container mt-5">
    <h3 class="text-center">Edit slider image</h3>
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="mt-3" enctype="multipart/form-data">
        <input type="text" asp-for="@Model.Title" class="form-control mt-5" value="@Model.Title" placeholder="Enter work title...">
        <span class="text-danger d-block" asp-validation-for="@Model.Title"></span>

        <input type="text" class="form-control mt-3" asp-for="@Model.Desc" value="@Model.Desc" placeholder="Enter work description...">
        <span class="text-danger d-block" asp-validation-for="@Model.Desc"></span>

        <div class="mt-3">
            <img src="~/assets/img/@Model.Sign" style="width:300px;height:150px;" />
        </div>
            <input asp-for="Photo" class="form-control mt-5">
            <button type="submit" class="btn btn-success mr-2 mt-3">Submit</button>
            <a asp-action="Index" class="btn btn-primary mx-2 mt-3">Cancel</a>
    </form>

</div>